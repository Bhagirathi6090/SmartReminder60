<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    tools:context=".BirthdayActivity"
    tools:openDrawer="start">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <com.google.android.material.appbar.AppBarLayout
            android:id="@+id/appBarLayout3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:theme="@style/AppTheme.AppBarOverlay">

            <androidx.appcompat.widget.Toolbar
                android:id="@+id/toolbar3"
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"
                android:background="@drawable/side_nav_bar"
                app:popupTheme="@style/AppTheme.PopupOverlay" />
        </com.google.android.material.appbar.AppBarLayout>

        <EditText
            android:id="@+id/editor_txt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="8dp"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:fontFamily="sans-serif-black"
            android:hint="name"
            android:paddingStart="8dp"
            android:scrollbars="vertical"
            android:textSize="22sp"
            app:backgroundTint="#a9a9a9" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/date_set_birthday"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="8dp"
                android:padding="8dp"
                android:textSize="18sp"
                android:textColor="#ffffff"
                android:layout_alignParentLeft="true"
                android:background="@drawable/roundcorner"
                android:text="DATE"/>

            <EditText
                android:id="@+id/date_picker_birthday"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="8dp"
                android:fontFamily="sans-serif-black"
                android:hint="date"
                android:padding="8dp"
                android:inputType="none"
                android:textSize="18sp"
                android:layout_toEndOf="@+id/date_set_birthday"
                app:backgroundTint="#a9a9a9" />

            <TextView
                android:id="@+id/time_picker_birthday"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="8dp"
                android:padding="8dp"
                android:textSize="18sp"
                android:textColor="#ffffff"
                android:layout_below="@+id/date_set_birthday"
                android:background="@drawable/roundcorner"
                android:text="TIME"/>

            <EditText
                android:id="@+id/time_set_birtday"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="8dp"
                android:fontFamily="sans-serif-black"
                android:hint="time"
                android:inputType="none"
                android:textSize="18sp"
                android:padding="8dp"
                android:layout_toEndOf="@+id/time_picker_birthday"
                android:layout_below="@+id/date_picker_birthday"
                app:backgroundTint="#a9a9a9" />
        </RelativeLayout>

    </LinearLayout>
</androidx.drawerlayout.widget.DrawerLayout>
